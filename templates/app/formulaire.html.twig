{% extends "base.html.twig" %}

{% block title %}Formulaire{% endblock %}


{% block body %}

<h1 class="text-center my-4" > Mon formulaire</h1>

<div class="container">
{{ form_start(form) }}
    
    {{ form_row(form.prenom , {
        label: "prenom",
        attr: {placeholder: "prenom"}
    }) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.adresse) }}
    {{ form_row(form.telephone) }}
    {{ form_row(form.email) }}
    {{ form_row(form.poste) }}
    {{ form_row(form.salaire) }}
    {{ form_row(form.date_de_naissance) }}
    

    <button type="submit" class="btn btn-primary">Envoyer</button>

</div>




{{form_end(form)}}
{% endblock %}

